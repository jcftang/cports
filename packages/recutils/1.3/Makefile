DISTNAME=	recutils
VERSION=	1.3
HOMEPAGE=	http://www.gnu.org/software/$(DISTNAME)
MASTER_SITES=	ftp://ftp.esat.net/pub/gnu/$(DISTNAME)
MAINTAINER=	jtang@tchpc.tcd.ie
GNU_CONFIGURE=	yes
DISTFILES = $(DISTNAME)-$(VERSION).tar.gz

DESCRIPTION=	"GNU Recutils is a set of tools and libraries to access human-editable,"
DESCRIPTION+=	"text-based databases called recfiles. The data is stored as a sequence"
DESCRIPTION+=	"of records, each record containing an arbitrary number of named fields."

