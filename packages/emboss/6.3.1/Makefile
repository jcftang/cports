include ../../../mk/gnu.pre.mk

#
# should check this package and refer to dependancies that are in cports
#

DISTNAME=	EMBOSS
VERSION=	6.3.1
CATEGORIES=	utilities
HOMEPAGE=	http://emboss.sourceforge.net
MASTER_SITES=	ftp://emboss.open-bio.org/pub/EMBOSS/
MAINTAINER=	jtang@tchpc.tcd.ie
HAS_CONFIGURE=	yes
DISTFILES = $(DISTNAME)-$(VERSION).tar.gz

EXTRAVERSION=

DESCRIPTION= "EMBOSS is The European Molecular Biology Open Software Suite. EMBOSS"
DESCRIPTION+= "is a free Open Source software analysis package specially developed for"
DESCRIPTION+= "the needs of the molecular biology (e.g. EMBnet) user community. The"
DESCRIPTION+= "software automatically copes with data in a variety of formats and"
DESCRIPTION+= "even allows transparent retrieval of sequence data from the web. Also,"
DESCRIPTION+= "as extensive libraries are provided with the package, it is a platform"
DESCRIPTION+= "to allow other scientists to develop and release software in true open"
DESCRIPTION+= "source spirit. EMBOSS also integrates a range of currently available"
DESCRIPTION+= "packages and tools for sequence analysis into a seamless whole. EMBOSS"
DESCRIPTION+= "breaks the historical trend towards commercial software packages."

include ../../../mk/gnu.post.mk
